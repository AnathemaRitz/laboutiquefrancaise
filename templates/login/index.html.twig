{% extends 'base.html.twig' %}

{% block body %}

<div class="container my-5">
    <h1>Connexion</h1>

    {% if error %}
            <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <form action="{{ path('app_login') }}" method="post">
            <label for="username">Email:</label>
            <input class="form-control mb-3" type="text" id="username" name="_username" value="{{ last_username }}">

            <label for="password">Mot de passe:</label>
            <input class="form-control"  type="password" id="password" name="_password">


            <input type="hidden" name="_target_path" value={{ path('app_account') }}> 

            </br>
             Vous n'avez pas encore de compte? <a href="{{ path("app_register")}}">En cr√©er un</a>
            </br>
            <button class= "btn btn-success mt-3" type="submit">Se connecter</button>
        </form>


</div>

{% endblock %}
